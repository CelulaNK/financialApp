@{
    ViewData["Title"] = "Home Page";
}
@model List<FinancialApp.Web.Models.Transaccion>

<h1>Movimientos</h1>

<table class="table">
    <thead>
    <tr>
        <th>Cuenta</th>
        <th>Fecha</th>
        <th>Nota</th>
        <th>Monto</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model)
    {
        <tr>
        <td>@item.CuentaId</td>
        <td>@item.Fecha</td>
        <td>@item.Nota</td>
        <td class="@(item.Tipo == "GASTO" ? "text-danger" : "text-success")">
            
            @item.Monto
        </td>
    </tr>
    }
    </tbody>
</table>